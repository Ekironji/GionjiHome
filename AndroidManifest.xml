<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.udoo.xmas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />
     
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ghhome"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.udoo.xmas.UMainActivity"
            android:label="@string/app_name" 
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.udoo.xmas.activities.LedActivity"
            android:label="@string/app_name" 
        	android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="org.udoo.xmas.activities.RelayActivity"
            android:label="@string/app_name" 
        	android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="org.udoo.xmas.activities.VideoActivity"
            android:label="@string/app_name" 
        	android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
